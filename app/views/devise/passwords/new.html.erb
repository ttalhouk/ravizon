<%= react_component 'FlashMessages', messages: flash_messages %>
<div class="login">
  <h2 class="login--title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"login--form" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field login--input">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "button button--action"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
