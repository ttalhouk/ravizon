<%= react_component 'FlashMessages', messages: flash_messages %>
<div class="login">
  <h2 class="login--title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"login--form"}) do |f| %>
    <!-- <%= devise_error_messages! %> -->

    <div class="field login--input">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field login--input">
      <%= f.label :password %>

      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <% if @minimum_password_length %>
    <em class="login--info">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

    <div class="field login--input">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button button--action" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
